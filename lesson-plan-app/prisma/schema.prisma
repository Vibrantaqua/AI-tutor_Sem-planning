generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String       @id @default(cuid())
  name      String
  email     String       @unique
  password  String
  createdAt DateTime     @default(now())
  lessonPlans LessonPlan[]
}

model LessonPlan {
  id        String   @id @default(cuid())
  userId    String
  subject   String
  weeks     Int
  topics    String   // store JSON string
  planData  String   // store JSON string
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
